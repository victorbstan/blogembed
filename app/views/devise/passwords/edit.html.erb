<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= render partial: 'common/devise_error_messages' %>

  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "New password" %>
  <%= f.password_field :password, :autofocus => true, class: "form-control" %></div>

  <div><%= f.label :password_confirmation, "Confirm new password" %>
  <%= f.password_field :password_confirmation, class: "form-control" %></div>

  <%= f.submit "Change my password" %>
<% end %>

<%= render "devise/shared/links" %>
